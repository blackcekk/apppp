# Environment Configuration
# Copy this file to .env and configure your settings

# Market Data Provider
# Options: mock, crypto_ws, rest
EXPO_PUBLIC_MARKET_PROVIDER=mock

# Authentication Provider  
# Options: mock, remote
EXPO_PUBLIC_AUTH_PROVIDER=mock

# FX Rate Provider
# Options: mock, remote
EXPO_PUBLIC_FX_PROVIDER=mock

# API Configuration
EXPO_PUBLIC_API_BASE_URL=https://toolkit.rork.com

# Development flags
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_ENABLE_LOGS=true

# Market Data API Keys (for production - keep these on server side)
# MARKET_API_KEY=your_api_key_here
# FX_API_KEY=your_fx_api_key_here